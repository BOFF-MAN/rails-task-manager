<div class="page-container">
  <h1>My Tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= task.completed ? "<i class='fa-solid fa-square-check'></i>".html_safe : "<i class='fa-solid fa-square'></i>".html_safe %>
          <%= link_to task.title, task_path(task) %>
          <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe,
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add a new task", new_path %>
</div>
